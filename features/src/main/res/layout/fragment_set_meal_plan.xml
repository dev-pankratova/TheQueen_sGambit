    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_allerg_btn"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить аллерген"
        android:textColor="@color/info_txt"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/autoComplete_txtView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_meal_plan_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textSize="12sp"
        android:text="Далее"
        android:layout_margin="@dimen/app_padding_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

