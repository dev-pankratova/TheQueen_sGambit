<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/top_text_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/registration_txt"
        style="@style/main_header_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_phone_new"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Телефон"
        android:paddingStart="@dimen/app_padding_32dp"
        android:paddingEnd="@dimen/app_padding_32dp"
        app:layout_constraintTop_toBottomOf="@+id/top_text_auth">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTxt_phone_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_pass_new"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Пароль"
        app:endIconMode="password_toggle"
        android:paddingStart="@dimen/app_padding_32dp"
        android:paddingEnd="@dimen/app_padding_32dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_phone_new">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInpetEditTxt_pass_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_repeat_pass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Повторите пароль"
        app:endIconMode="password_toggle"
        android:paddingStart="@dimen/app_padding_32dp"
        android:paddingEnd="@dimen/app_padding_32dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_pass_new">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInpetEditTxt_repeat_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/yes_account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes_account_txt"
        android:textColor="@color/info_txt"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/app_padding_32dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_repeat_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/registration_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textSize="12sp"
        android:text="Зарегистрироваться"
        android:layout_margin="@dimen/app_padding_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>