<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/set_meal_plan_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/set_meal_plan_txt"
        style="@style/main_header_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/add_info_2"
        android:text="Что еще нужно исключить из питания?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/app_padding_32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/set_meal_plan_txt_2"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лактоза"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/app_padding_32dp"
        app:layout_constraintTop_toBottomOf="@+id/add_info_2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Глютен"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check1"
        app:layout_constraintStart_toStartOf="@+id/check1" />

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мясо"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check2"
        app:layout_constraintStart_toStartOf="@+id/check2" />

    <CheckBox
        android:id="@+id/check4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рыба"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check3"
        app:layout_constraintStart_toStartOf="@+id/check3" />

    <TextView
        android:id="@+id/plan_txt"
        android:text="Тип питания"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/check4"
        app:layout_constraintStart_toStartOf="@+id/check4"/>

    <CheckBox
        android:id="@+id/check5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Веган"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/plan_txt"
        app:layout_constraintStart_toStartOf="@+id/plan_txt" />

    <CheckBox
        android:id="@+id/check6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вегетарианец"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check5"
        app:layout_constraintStart_toStartOf="@+id/check5" />

    <CheckBox
        android:id="@+id/check7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ПП-рацион"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/check6"
        app:layout_constraintStart_toStartOf="@+id/check6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next2_txt"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textSize="12sp"
        android:text="Далее"
        android:layout_margin="@dimen/app_padding_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--    <EditText
            android:id="@+id/auth_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@style/FieldInputHeight56dp"
            app:layout_constraintTop_toBottomOf="@+id/top_text_auth"
            tools:text="Dgfgfdgfdgfd"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>